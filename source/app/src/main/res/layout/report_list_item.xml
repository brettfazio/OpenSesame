<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Name"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/report_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/report_name"
            android:text="Category: Some category here"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/report_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/report_category"
            android:text="Distance: Some distance here"
            android:textSize="18sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>